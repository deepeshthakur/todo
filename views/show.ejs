<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/67702ad621.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="" />
    <title>Document</title>
  </head>
  <body>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">Your Task</h2>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name of Task</th>
            <th scope="col">Task</th>
          </tr>
        </thead>
        <tbody >
          <% var i=1 %> <% data.forEach((item)=>{ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= item.name %></td>
            <td><%= item.Task %></td>
            <td>
                <form action="/edit/task/<%= item._id %>" class="d-inline">
                    <button class="btn" type="submit" method="get">
                        edit
                        <i class="fa-solid fa-pen-to-square" style="color: #1760de;"></i>
                    </button>
                </form>
                <form action="/todo/delete/task/<%=item._id %>" class="d-inline" method="post">
                    <button class="btn" type="delete">
                        delete
                        <i class="fa-solid fa-trash" style="color: #ff0f33;"></i>
                    </button>
                </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
        
      </table>
      <a href="/"><Button class="" style="padding: 15px 20px 7px 15px; border: none; background-color: aqua; border-radius: 20%; margin-left: 300px;">Home</Button></a>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
